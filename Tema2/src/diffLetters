function noDiffLetters(s1, s2) {
    if(s1.length !== s2.length)
        return -1;
    let arr1 = [...s1];
    let arr2 = [...s2];
    arr1.sort();
    arr2.sort();
    arr1.join('');
    arr2.join('');
    if(arr1 === arr2)
        return 0;
    let nr = 0;
    for(let i = 0; i < arr1.length; i++)
    {
        if(arr1[i] !== arr2[i])
            nr++;
    }
    return nr;
};

console.log(noDiffLetters("mamacu", "amamla"));